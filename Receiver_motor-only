#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
#include <Servo.h>

RF24 radio(7, 8); // CE, CSN
const byte addresses[][6] = {"00001", "00002"};

Servo myServoX;
Servo myServoY;

struct Payload {
  int16_t ax;   // angle X (0..180)
  int16_t ay;   // angle Y (0..180)
};

void setup() {
  myServoX.attach(5);
  myServoY.attach(3);

  radio.begin();
  radio.openWritingPipe(addresses[0]);    // 00001 (back to transmitter)
  radio.openReadingPipe(1, addresses[1]); // 00002 (from transmitter)
  radio.setPALevel(RF24_PA_MIN);
  radio.startListening();
}

void loop() {
  if (radio.available()) {
    Payload p;
    radio.read(&p, sizeof(p));

    // Clamp to valid servo range
    int x = constrain(p.ax, 0, 180);
    int y = constrain(p.ay, 0, 180);

    myServoX.write(x);
    myServoY.write(y);
  }
}
